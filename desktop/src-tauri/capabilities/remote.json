{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "remote-backend",
  "description": "Permissions for the main window when served from the embedded backend (http://localhost:6600). Required because OIDC/SSO callback navigates the webview to http://localhost:{port}/auth/callback, after which the window URL is a remote HTTP origin instead of tauri://localhost. All Tauri IPC (plugin invokes, event listeners) needs explicit remote permission.",
  "windows": ["main"],
  "remote": {
    "urls": ["http://localhost:*", "http://127.0.0.1:*"]
  },
  "permissions": [
    "core:default",
    "shell:allow-open",
    "opener:default",
    "core:window:default",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:window:allow-set-focus",
    "core:window:allow-close",
    "core:window:allow-minimize",
    "core:window:allow-unminimize",
    "core:window:allow-maximize",
    "core:window:allow-unmaximize",
    "core:window:allow-is-maximized",
    "core:window:allow-toggle-maximize",
    "core:window:allow-set-fullscreen",
    "core:window:allow-is-fullscreen",
    "core:window:allow-start-dragging",
    "core:event:allow-listen",
    "core:tray:default",
    "dialog:default",
    "dialog:allow-open",
    "websocket:default"
  ]
}
